{
    "name": "Open Spyro Devcontainer",
    "dockerFile": "../dev.Dockerfile",
    "workspaceFolder": "/main",
    "workspaceMount": "source=${localWorkspaceFolder},target=/main,type=bind,consistency=delegated",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb",
                "ms-vscode.hexeditor"
            ]
        }
    }
}